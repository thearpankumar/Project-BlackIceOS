# Database Configuration
DB_PASSWORD=your_secure_db_password_here_minimum_32_chars

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_characters_long_for_security
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Encryption Configuration for API Keys (Groq and Google Generative AI)
ENCRYPTION_KEY=your_encryption_key_32_bytes_base64_encoded_fernet_key

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# CORS Configuration (adjust for your network setup)
ALLOWED_ORIGINS=["http://localhost:3000", "http://192.168.1.0/24"]

# Rate Limiting
LOGIN_RATE_LIMIT=5
REGISTRATION_RATE_LIMIT=3

# Password Security Requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=True
REQUIRE_LOWERCASE=True
REQUIRE_DIGITS=True
REQUIRE_SPECIAL_CHARS=True

# Session Management
SESSION_CLEANUP_INTERVAL_HOURS=24
MAX_SESSIONS_PER_USER=5

# Environment
ENVIRONMENT=production