# Samsung AI-OS VM Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# Authentication Server Configuration (HOST SYSTEM)
# =============================================================================
# URL of the authentication server running on the host system
# Update the IP address to match your host system's IP
AUTH_SERVER_URL=http://192.168.1.100:8000

# Optional: Authentication credentials for auto-login
# AUTH_USERNAME=security_expert
# AUTH_PASSWORD=your_secure_password

# =============================================================================
# Voice Recognition & AI Processing
# =============================================================================
# Google Generative AI API Key (for AI processing and speech recognition)
GOOGLE_AI_API_KEY=your_google_generative_ai_api_key_here

# Alternative naming for compatibility
GEMINI_API_KEY=your_google_generative_ai_api_key_here

# PicoVoice Access Key (for wake word detection)
PICOVOICE_ACCESS_KEY=your_picovoice_access_key_here

# Groq API Key (optional, for alternative AI processing)
GROQ_API_KEY=your_groq_api_key_here

# =============================================================================
# Desktop Automation Configuration
# =============================================================================
# Virtual Display Settings
USER_DISPLAY=:0
AI_DISPLAY=:1
SCREEN_RESOLUTION=1920x1080
COLOR_DEPTH=24

# VM Performance Optimization
VM_SCREENSHOT_QUALITY=75
VM_ANIMATION_DELAY=0.2
VM_MAX_CONCURRENT_ACTIONS=2
VM_TEMPLATE_CONFIDENCE=0.75

# Desktop Automation Safety
AUTOMATION_SAFETY_ENABLED=true
EMERGENCY_STOP_KEY=F12
MAX_CLICK_RATE=10
MAX_TYPE_SPEED=100

# Vision Configuration
# Note: OCR functionality removed - use LLM vision for text recognition and element detection

# Performance Requirements (Task 3)
MAX_RESPONSE_TIME_MS=100
MAX_MEMORY_USAGE_MB=512
TEMPLATE_CONFIDENCE_THRESHOLD=0.75

# Safety Systems Configuration
PERMISSION_STRICT_MODE=true
ISOLATION_MONITORING_ENABLED=true
EMERGENCY_PROCESS_TERMINATION=true

# Template Management
TEMPLATE_VALIDATION_ENABLED=true
TEMPLATE_AUTO_CREATION=false
TEMPLATE_BACKUP_ENABLED=true

# =============================================================================
# User Activity Monitoring
# =============================================================================
# Activity thresholds (in seconds)
ACTIVITY_THRESHOLD_IDLE=300
ACTIVITY_THRESHOLD_LIGHT=60
ACTIVITY_THRESHOLD_INTENSIVE=10

# VM Resource Limits (percentages)
VM_MAX_CPU_PERCENT=80
VM_MAX_MEMORY_PERCENT=90
VM_MAX_DISK_IO_PERCENT=85

# =============================================================================
# Security & Safety Configuration
# =============================================================================
# Dangerous command patterns to block (comma-separated)
BLOCKED_PATTERNS="rm -rf,sudo shutdown,mkfs.,dd if=,format ,delete *,chmod 777,passwd"

# Critical processes that should not be interrupted
CRITICAL_PROCESSES="zoom,teams,skype,discord,obs-studio,libreoffice-impress,firefox,chrome,burpsuite,wireshark"

# Permission System Configuration
PERMISSION_VALIDATION_ENABLED=true
ACTION_RATE_LIMIT_PER_MINUTE=100
ACTION_RATE_LIMIT_PER_SECOND=10
ALLOWED_APPLICATIONS="burpsuite,wireshark,nmap,metasploit,firefox,terminal"

# Isolation System Configuration
DISPLAY_ISOLATION_ENABLED=true
PROCESS_ISOLATION_MONITORING=true
VIOLATION_THRESHOLD_COUNT=5
AUTO_ISOLATION_RECOVERY=true

# =============================================================================
# Audio Configuration
# =============================================================================
# Audio settings for voice recognition
AUDIO_SAMPLE_RATE=16000
AUDIO_VAD_AGGRESSIVENESS=3
AUDIO_SILENCE_DURATION=3.0
AUDIO_FRAME_DURATION=30

# Voice Recognition Settings
VOICE_DETECTION_TIMEOUT=30
WAKE_WORD_SENSITIVITY=0.7

# Wake word settings
WAKE_WORDS=computer
WAKE_WORD_SENSITIVITY=0.5

# Text-to-speech settings
TTS_RATE=200
TTS_VOLUME=0.8

# Language Detection
SPEECH_LANGUAGE=en-US
TRANSCRIPTION_LANGUAGE=eng

# =============================================================================
# Template and Recognition Paths
# =============================================================================
# Base directory for GUI element templates
TEMPLATE_BASE_DIR=templates

# Screenshot directory for captures
SCREENSHOT_DIR=screenshots

# Temporary files directory
TEMP_DIR=/tmp/samsung-ai-os

# =============================================================================
# Logging and Debug Configuration
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable debug mode for development
DEBUG_MODE=false

# Log file path
LOG_FILE_PATH=logs/samsung-ai-os.log

# Enable verbose automation logging
VERBOSE_AUTOMATION=false

# =============================================================================
# Network and Communication
# =============================================================================
# Timeout settings for network requests (seconds)
AUTH_SERVER_TIMEOUT=10
AUTH_SERVER_RETRY_ATTEMPTS=3
AUTH_SERVER_RETRY_DELAY=1

# Health check interval (seconds)
AUTH_SERVER_HEALTH_CHECK_INTERVAL=300

# =============================================================================
# Development and Testing
# =============================================================================
# Enable test mode (skips certain validations)
TEST_MODE=false

# Mock authentication (for development without auth server)
MOCK_AUTH_ENABLED=false

# Disable certain safety checks for development
DEV_DISABLE_USER_MONITORING=false
DEV_DISABLE_SAFETY_CHECKS=false

# =============================================================================
# Optional: System Integration
# =============================================================================
# Desktop environment detection
DESKTOP_ENVIRONMENT=auto

# Window manager compatibility
WINDOW_MANAGER=auto

# System notifications
ENABLE_NOTIFICATIONS=true

# =============================================================================
# Optional: Advanced Features
# =============================================================================
# Enable memory persistence across sessions
ENABLE_MEMORY_PERSISTENCE=false

# Memory database path (if persistence enabled)
MEMORY_DB_PATH=data/memory.db

# Enable workflow learning
ENABLE_WORKFLOW_LEARNING=true

# Maximum stored workflows
MAX_STORED_WORKFLOWS=100
